def func(a,b,*r):
  if(a>b):
    c=a*b
    return(print("True with %s"%(r)))
  else:
    return(print("False",r))

x=func(1,2,[3,5,6])
print(x)


def func(a,b,*r):
  if(a>b):
    c=a*b
    return(print("True with %s"%(r)))
  else:
    return(print("False",r))

x=func(1,2,('HyGoogle','Vigil'))
print(x)

